#!/bin/sh

set -e

case "$1" in
  install|upgrade)
	# Delete obsolete alsa-base dev.d symlinks
	for N in 0 1 2 3 4 5 6 7 ; do
		D="/etc/dev.d/snd/controlC$N"
		if [ -d "$D" ] ; then
			L="$D/alsa-base.dev"
			rm -fv "$L"
		fi
	done
	# Delete obsolete alsa-base dev.d script
	rm -fv /etc/alsa/dev.d/alsa-base
	;;
  abort-upgrade)
	# Nothing to do
	;;
esac



